@{
    this.ViewData["Title"] = "Dashboard";

    var recipesCount = Model.RecipesCount;
    var articleCount = Model.ArticlesCount;
}

<div class="container pl-3 centered">
    <div class="row">
        <div class="col-md-3 centered ">
            <h1 style="text-align:center;">Cooking Hub Dashboard</h1>
        </div>
    </div>
    <div class="row statistic-card bg-white shadow p-3  rounded">
        <div class="col-12 col-lg-8 pr-3 bg-white" style="min-height:120px; min-width:300px;" name="SystemUsers">
            <canvas id="lineChart"></canvas>
        </div>
        <div class="col bg-white">
            <h3 class="centered mt-5">CookingHub System Users</h3>
            <ul id="UsersNow" class="centered">
                <li>Daily Users</li>
                <li></li>
                <li>Registered Users:</li>
                <li><b>@Model.RegisteredUsers</b></li>
                <li>Admins</li>
                <li><b>@Model.Admins</b></li>
            </ul>
        </div>
    </div>
    <div class="row">

        <div class="col-12 col-md-7 statistic-card shadow p-3  mb-5 mt-3 bg-white rounded ">
            <!-- To be done-->
            <h3>CookingHub Top 3</h3>
            <div class="row">
                <div class="col" name="TopCategories">
                    
                </div>
                <div class="col" name="TopUsers">

                </div>
                <div class="col" name="TopRecipes">

                </div>
            </div>
        </div>
        <div class="col-12 col-md-5 statistic-card shadow p-3 mb-5 mt-3 bg-white rounded" style="padding-right:10px;">
            <h3 class="centered">CookingHub Main Content</h3>
            <div class="container">
                <p style="text-align:center">Recipes Count: <strong class="recipe-sec">@recipesCount</strong> | Articles Count: <strong class="article-sec">@articleCount</strong> </p>
            </div>
            <div class="conteiner chart-card" name="RecipesStatistic">
                <canvas class="centered" id="RecipesnArticlesChar"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
 }