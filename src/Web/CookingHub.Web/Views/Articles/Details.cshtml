@using CookingHub.Models.ViewModels.Articles
@model DetailsListingViewModel
@{
    this.ViewData["Title"] = "Details";
}

<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>Article details</h1>
            </div>
        </div>
    </div>
</div>
<!-- End All Pages -->
<!-- Start article details -->
<div class="blog-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <h2>Article details</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-12">
                <div class="blog-inner-details-page">
                    <div class="blog-inner-box">
                        @if (Model.ArticleListingViewModel != null)
                        {
                            <div class="side-blog-img">
                                <img class="img-fluid" src="@Model.ArticleListingViewModel.ImagePath" alt="Article Image">
                                <div class="date-blog-up">
                                    @Model.ArticleListingViewModel.CreatedOn.ToShortDateString()
                                </div>
                            </div>
                            <div class="inner-blog-detail details-page">
                                <h3>@Model.ArticleListingViewModel.Title</h3>
                                <ul>
                                    <li>
                                        <i class="fa fa-user"></i> Posted By : <span>@Model.ArticleListingViewModel.UserUsername</span>
                                    </li>
                                    <li>|</li>
                                    <li>
                                        <i class="fa fa-calendar"></i> Date : <span>@Model.ArticleListingViewModel.CreatedOn.ToLocalTime()</span>
                                    </li>
                                    <li>|</li>
                                    <li>
                                        <i class="fa fa-list"></i> Category : <span>@Model.ArticleListingViewModel.CategoryName</span>
                                    </li>
                                </ul>
                                <p>@Html.Raw(Model.ArticleListingViewModel.SanitizedDescription)</p>
                            </div>
                            <div class="blog-comment-box">
                                <h3>Comments</h3>
                                <div class="comment-item">
                                    <div class="comment-item-left">
                                        <img src="~/images/avt-img.jpg" alt="">
                                    </div>
                                    <div class="comment-item-right">
                                        <div class="pull-left">
                                            <a href="#">Rubel Ahmed</a>
                                        </div>
                                        <div class="pull-right">
                                            <i class="fa fa-clock-o" aria-hidden="true"></i>Time : <span>11.30 am</span>
                                        </div>
                                        <div class="des-l">
                                            <p>Morbi lacinia ultrices lorem id tincidunt. Cras id dui risus. Pellentesque consectetur id mi sed pharetra. Proin imperdiet gravida nisl, sit amet varius urna. In auctor.</p>
                                        </div>
                                        <a href="#" class="right-btn-re"><i class="fa fa-reply" aria-hidden="true"></i> Reply</a>
                                    </div>
                                </div>
                                <div class="comment-item children">
                                    <div class="comment-item-left">
                                        <img src="~/images/avt-img.jpg" alt="">
                                    </div>
                                    <div class="comment-item-right">
                                        <div class="pull-left">
                                            <a href="#">Admin</a>
                                        </div>
                                        <div class="pull-right">
                                            <i class="fa fa-clock-o" aria-hidden="true"></i>Time : <span>1.30 pm</span>
                                        </div>
                                        <div class="des-l">
                                            <p>Morbi lacinia ultrices lorem id tincidunt. Cras id dui risus. Pellentesque consectetur id mi sed pharetra. Proin imperdiet gravida nisl, sit amet varius urna. In auctor.</p>
                                        </div>
                                        <a href="#" class="right-btn-re"><i class="fa fa-reply" aria-hidden="true"></i> Reply</a>
                                    </div>
                                </div>
                                <div class="comment-item">
                                    <div class="comment-item-left">
                                        <img src="~/images/avt-img.jpg" alt="">
                                    </div>
                                    <div class="comment-item-right">
                                        <div class="pull-left">
                                            <a href="#">Rubel Ahmed</a>
                                        </div>
                                        <div class="pull-right">
                                            <i class="fa fa-clock-o" aria-hidden="true"></i>Time : <span>11.30 am</span>
                                        </div>
                                        <div class="des-l">
                                            <p>Morbi lacinia ultrices lorem id tincidunt. Cras id dui risus. Pellentesque consectetur id mi sed pharetra. Proin imperdiet gravida nisl, sit amet varius urna. In auctor.</p>
                                        </div>
                                        <a href="#" class="right-btn-re"><i class="fa fa-reply" aria-hidden="true"></i> Reply</a>
                                    </div>
                                </div>
                            </div>
                            <div class="comment-respond-box">
                                <h3>Leave your comment </h3>
                                <div class="comment-respond-form">
                                    <form id="commentrespondform" class="comment-form-respond row" method="post">
                                        <div class="col-lg-6 col-md-6 col-sm-6">
                                            <div class="form-group">
                                                <input id="name_com" class="form-control" name="name" placeholder="Name" type="text">
                                            </div>
                                            <div class="form-group">
                                                <input id="email_com" class="form-control" name="email" placeholder="Your Email" type="email">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6">
                                            <div class="form-group">
                                                <textarea class="form-control" id="textarea_com" placeholder="Your Message" rows="2"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                            <button class="btn btn-submit">Submit comment</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger" role="alert">
                                There is not any article with this title.
                            </div>
                            <a class="btn btn-secondary btn-sm" asp-controller="Articles" asp-action="Index" role="button">Continue to articles</a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-8 col-12 blog-sidebar">
                <div class="right-side-blog">
                    <h3>Search</h3>
                    <form asp-action="Details" method="get">
                        <div class="blog-search-form">
                            <input name="searchTitle" placeholder="Search by article title" type="text">
                            <button class="search-btn">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </div>
                    </form>
                    <h3>Categories</h3>
                    <div class="blog-categories">
                        <ul>
                            @foreach (var category in Model.Categories)
                            {
                                <li>
                                    <a asp-area="" asp-controller="Categories" asp-action="ByName" asp-route-id="@category.Id">
                                        <span>@category.Name</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <h3>Recent Articles</h3>
                    <div class="post-box-blog">
                        <div class="recent-post-box">
                            @foreach (var article in Model.RecentArticles)
                            {
                                <div class="recent-box-blog">
                                    <div class="recent-img">
                                        <img id="article-size" class="img-fluid" src="@article.ImagePath" alt="Article Image">
                                    </div>
                                    <div class="recent-info">
                                        <ul>
                                            <li>
                                                <i class="fa fa-user"></i> Posted By : <span>@article.UserUsername</span>
                                            </li>
                                            <li>
                                                <i class="fa fa-calendar"></i> Date : <span>@article.CreatedOn.ToLocalTime()</span>
                                            </li>
                                        </ul>
                                        <a asp-area="" asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                            <h4>@article.Title</h4>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <h3>Recent Tags</h3>
                    <div class="blog-tag-box">
                        <ul class="list-inline tag-list">
                            <li class="list-inline-item"><a href="#">Food</a></li>
                            <li class="list-inline-item"><a href="#">Drink</a></li>
                            <li class="list-inline-item"><a href="#">Nature</a></li>
                            <li class="list-inline-item"><a href="#">Italian</a></li>
                            <li class="list-inline-item"><a href="#">Bootstrap4</a></li>
                            <li class="list-inline-item"><a href="#">Fashion</a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- End details -->

